<div class="sidemenu">
  <% @folders.each do |folder| %>
    <div class="item" onClick="showNotes(<%= folder.id %>)" >
      <%= folder.name %>
    </div>
  <% end %>
</div>

<div class="main">
  <h1>Folders</h1>
  <%= link_to "+ New Folder", '/folders/new', class: "btn btn-secondary" %>
  <div class="card" id="target">
    <div class="card-header">
      Note size:
    </div>
    <div class="card-body">
      <h5 class="card-title">Special title treatment</h5>
      <p class="card-text"></p>
      <a href="#" class="btn btn-primary">New Note</a>
    </div>
  </div>
</div>

<script type="text/javascript">
  function showNotes(id){
    fetch('/get_notes/'+id).
    then(function(res){
      return res.text();
    }).
    then((res)=>{
      $("#target").html(res);
    }).
    catch(function(err){
      console.log(err);
    })
  }
</script>
