<h1>Folders</h1>
<%= link_to "+ New Folder", '/folders/new', class: "btn btn-secondary" %>

<div class="row">
  <div class="col-sm-4 list-group">
    <% @folders.each do |folder| %>
      <a class="list-group-item list-group-item-action" onClick="showNotes(<%= folder.id %>)" >
        <%= folder.name %>
      </a>
    <% end %>
  </div>
  <div class="col-sm-8 card" id="target">
    <div class="card-header">
      Note size:
    </div>
    <div class="card-body">
      <h5 class="card-title">Special title treatment</h5>
      <p class="card-text"></p>
      <a href="#" class="btn btn-primary">New Note</a>
    </div>
  </div>
</div>

<script type="text/javascript">
  function showNotes(id){
    fetch('/get_notes/'+id).
    then(function(res){
      return res.text();
    }).
    then((res)=>{
      $("#target").html(res);
    }).
    catch(function(err){
      console.log(err);
    })
  }
</script>
