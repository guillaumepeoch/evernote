<%= form_for [@folder, @note] do |f| %>
  <%= f.label 'Title', class: 'font-weight-bold' %>
  <%= f.text_field :title, class: 'input' %>
  
  <%= f.label 'Content', class: 'font-weight-bold' %>
  <%= f.text_area :content, size: '4x20', class: 'input' %>
  
  <%= f.submit 'Save', class: 'button save-btn' %>
  <%= link_to 'Cancel', folder_notes_path(@folder.id), class: 'button cancel-btn cancel-link' %>
<% end %>
