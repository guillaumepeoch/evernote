<h1>Notes</h1>
<%= link_to 'New Note', new_folder_note_path(@folder.id), class: 'btn btn-secondary' %>
<div class="foldersidemenu">
  
  <%= link_to new_folder_path, :class => 'cancel-link' do %>
    <div id='new-folder'>
      <div id='new-folder-plus'>+</div> New Folder
    </div>
  <% end %>
  
  <% @folders.each do |folder| %>
    <%= link_to folder_notes_path(folder.id), :class => 'cancel-link block' do %>
      <div class='item'>
        <%= folder.name %> 
      </div>
    <% end %>
  <% end %>
  
</div>

<% if @notes.empty? %>
  <p>
    No Notes...
  </p>
<% else %>
  <div class="notessidemenu">
    <%= link_to new_folder_path, :class => 'cancel-link' do %>
      <div id='new-folder'>
        <div id='new-folder-plus'>+</div> New Note
      </div>
    <% end %>
    <% @notes.each do |note| %>
      <%= link_to folder_note_path(@folder.id, note.id), :class => 'cancel-link block' do %>
        <div class='item'>
          <%= note.title %> 
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
